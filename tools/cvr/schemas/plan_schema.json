{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Implementation Plan",
  "type": "object",
  "required": [
    "meta",
    "relevant_lessons",
    "items"
  ],
  "additionalProperties": false,
  "properties": {
    "relevant_lessons": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string"
      }
    },
    "meta": {
      "type": "object",
      "required": [
        "version",
        "generated_at",
        "operating_mode"
      ],
      "additionalProperties": false,
      "properties": {
        "version": {
          "type": "string"
        },
        "generated_at": {
          "type": "string"
        },
        "operating_mode": {
          "type": "string",
          "enum": [
            "design-only",
            "audit-only",
            "full-execution"
          ]
        },
        "workspace": {
          "type": "string"
        },
        "repo": {
          "type": "string"
        }
      }
    },
    "items": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": [
          "id",
          "status",
          "hypothesis",
          "scope",
          "invariants",
          "tasks",
          "tests",
          "evidence"
        ],
        "additionalProperties": false,
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^HYP-[0-9]{4,}$"
          },
          "status": {
            "type": "string",
            "enum": [
              "proposed",
              "reopened",
              "regression-only",
              "finished"
            ]
          },
          "hypothesis": {
            "type": "string",
            "minLength": 10
          },
          "scope": {
            "type": "object",
            "required": [
              "components"
            ],
            "additionalProperties": false,
            "properties": {
              "components": {
                "type": "array",
                "minItems": 1,
                "items": {
                  "type": "string"
                }
              },
              "files": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              }
            }
          },
          "invariants": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "string"
            }
          },
          "tasks": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "object",
              "required": [
                "step",
                "description",
                "done_definition"
              ],
              "additionalProperties": false,
              "properties": {
                "step": {
                  "type": "integer",
                  "minimum": 1
                },
                "description": {
                  "type": "string"
                },
                "done_definition": {
                  "type": "string"
                }
              }
            }
          },
          "tests": {
            "type": "object",
            "required": [
              "unit",
              "integration",
              "build"
            ],
            "additionalProperties": false,
            "properties": {
              "unit": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              },
              "integration": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              },
              "build": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              }
            }
          },
          "evidence": {
            "type": "object",
            "required": [
              "required_artifacts"
            ],
            "additionalProperties": false,
            "properties": {
              "required_artifacts": {
                "type": "array",
                "minItems": 1,
                "items": {
                  "type": "string"
                }
              },
              "notes": {
                "type": "string"
              }
            }
          }
        }
      }
    }
  }
}