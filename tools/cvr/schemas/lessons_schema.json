{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Lessons Learned Session Schema",
    "type": "object",
    "required": [
        "date",
        "session",
        "lessons"
    ],
    "properties": {
        "date": {
            "type": "string"
        },
        "session": {
            "type": "string"
        },
        "lessons": {
            "type": "array",
            "items": {
                "type": "object",
                "required": [
                    "id",
                    "title",
                    "lesson",
                    "evidence"
                ],
                "properties": {
                    "id": {
                        "type": "integer"
                    },
                    "title": {
                        "type": "string"
                    },
                    "lesson": {
                        "type": "string"
                    },
                    "evidence": {
                        "type": "string"
                    }
                }
            }
        }
    }
}